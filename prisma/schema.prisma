// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  ADMIN
  ENTREGADOR
}

enum orderStatus {
  AGUARDANDO
  ENTREGUE
  DEVOLVIDA
}

model User {
  id        Int       @id @unique @default(autoincrement())
  type      Type      @default(ENTREGADOR)
  name      String
  email     String
  password  String
  cpf       String    @unique @db.VarChar(11)
  latitude  Float
  longitude Float
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime?
  deletedAt DateTime?

  Order        Order[]
  refreshToken refreshToken[]
}

model Recipient {
  id           Int            @id @unique @default(autoincrement())
  name         String
  email        String         @unique
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime?
  deletedAt    DateTime?
  Order        Order[]
  notification notification[]
}

model Order {
  id           Int         @id @unique @default(autoincrement())
  delivery_id  Int
  recipient_id Int
  status       orderStatus
  latitude     Float
  longitude    Float
  photo        String?
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime?
  deletedAt    DateTime?

  Delivery     User           @relation(fields: [delivery_id], references: [id])
  Recipient    Recipient      @relation(fields: [recipient_id], references: [id])
  notification notification[]
}

model refreshToken {
  id           Int     @id @unique @default(autoincrement())
  refreshToken String
  user_id      Int
  used         Boolean @default(false)

  User User @relation(fields: [user_id], references: [id])
}

model notification {
  id           Int      @id @unique @default(autoincrement())
  order_id     Int
  recipient_id Int
  description  String
  createdAt    DateTime @default(now())

  Order     Order     @relation(fields: [order_id], references: [id])
  Recipient Recipient @relation(fields: [recipient_id], references: [id])
}
